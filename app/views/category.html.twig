{% extends 'layout.html.twig' %}

{% block content %}
	<section id="category-{{ category.name }}" class="full-height-wrapper row">
		<div class="full-height-container">
			<div class="large-12 columns">
				<h1>{{ category.title }}</h1>
				<p>{{ category.description|raw }}</p>
				<ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-3 cards">
					{% for project in category.projects %}
					<li>
						<div class="item">
							<a href="{{ app.urlFor('project', {'category': category.permalink, 'project': project.permalink}) }}">
								<img src="/img/project/{{ project.name }}-logo.png" alt="{{ project.title }} logo"/>
								<h3>{{ project.title }}</h3>
							</a>
							<p>{{ project.description }}</p>
						</div>
					</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</section>
{% endblock content %}